 FIRST NEGATIVE NUMBER IN A WINODW OF SIZE K BRUTE FORCE
 
#include <bits/stdc++.h>
using namespace std;
int main()
{
  vector<int>a{-1,-2,-3,-4,-5,6,7,8};
  for(int i=0;i<=a.size()-3;i++)
  {
     
      for(int j=i;j<i+3;j++)
      {
          if(a[j]<0){cout<<a[j]<<" ";
          break;
              
          }
          else {cout<<0;break;}
      }
     
  }
  

    return 0;
}

GENERAL FORMAT FOR VARIABLE SIZE WINDOW
